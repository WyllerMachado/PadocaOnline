@model MVC.ViewModels.FornadaFormViewModel
@{
    ViewBag.Title = "FornadaForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Fornadas"))
{
    @Html.ValidationSummary(true, "Por favor, preencha os campos necessários abaixo:")

    <div class="form-group">
        @Html.LabelFor(m => m.Descricao)
        @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Descricao)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Hora)
        @Html.TextBoxFor(m => m.Hora, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Hora)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Minuto)
        @Html.TextBoxFor(m => m.Minuto, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Minuto)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Salvar</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
